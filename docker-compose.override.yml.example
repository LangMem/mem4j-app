# Local development overrides
# Copy this file to docker-compose.override.yml and customize for your local setup
# This file is automatically loaded by docker-compose

services:
  mem4j:
    environment:
      # Add your local API keys here
      - DASHSCOPE_API_KEY=your-actual-dashscope-api-key
      - OPENAI_API_KEY=your-actual-openai-api-key
    volumes:
      # Uncomment to enable live reload during development
      # - ./target/classes:/app/BOOT-INF/classes
      - ./logs:/app/logs

  postgres:
    ports:
      # Uncomment to expose PostgreSQL port locally
      # - "5432:5432"

  neo4j:
    environment:
      # Use a simple password for local development
      - NEO4J_AUTH=neo4j/localdev
    ports:
      # Uncomment to access Neo4j browser locally
      # - "7474:7474"

  qdrant:
    ports:
      # Uncomment to access Qdrant API locally
      # - "6333:6333"
